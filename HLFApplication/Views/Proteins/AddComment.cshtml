@model HLFApplication.Models.AddCommentToItem

@{
    ViewBag.Title = "AddComment";
}

<h2>Add Comment</h2>

@using (Html.BeginForm())
{


    <div class="form-group">
        @Html.DisplayNameFor(m => Model.Comment)
