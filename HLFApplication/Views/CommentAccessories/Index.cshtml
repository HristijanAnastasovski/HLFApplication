@model IEnumerable<HLFApplication.Models.CommentAccessory>

@{
    ViewBag.Title = "Index";
}

<h2>Comments</h2>


<table id="CommentsTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Opinion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Opinion)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CommentId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.CommentId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.CommentId })
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{
    <script>
        $(document).ready(function () {
            $("#CommentsTable").DataTable();
        });
    </script>
}