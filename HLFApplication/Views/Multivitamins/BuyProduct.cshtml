@model HLFApplication.Models.Multivitamin
@{
    ViewBag.Title = "BuyProduct";
}
<div style="display:block; clear:both">

    <h1>The product you selected to buy:</h1>
    <div style="width:40%;float:left;">
        <img src="@Model.ImageURL" style="max-height:300px;max-width:300px" />
    </div>
    
    <div style="width:40%;float:left;">
        <h3>Name: @Model.Name</h3>
        <h3>Price: @Model.Price$</h3>
        <h3>Number of products in stock: @Model.NumberOfProductsInStock</h3>
        <h3>Description:@Model.Description</h3>
        @Html.ActionLink("Proceed to Information page", "Create", "BuyMultivitamins", new { id = Model.MultivitaminId }, new { @class = "btn btn-default" })
    </div>
</div>
<div style="display:block; clear:both">
</div>
