@model HLFApplication.Models.AddRoleToUser
@{
    ViewBag.Title = "AddRole";
}

<h2>Add User to Role</h2>

@using (Html.BeginForm("AddRole", "Account"))
{
    <div class="form-group">
        @Html.LabelFor(m=>m.Email)
        @Html.TextBoxFor(m=>m.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.DropDownListFor(m=>m.selectedRole, new SelectList(Model.Roles),new { @class="form-control"})
    </div>
    <button type="submit">Add role</button>
}