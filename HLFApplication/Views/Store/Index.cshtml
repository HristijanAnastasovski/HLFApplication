@model HLFApplication.Models.Store
@{
    ViewBag.Title = "Index";
}
<div style="position: relative; text-align: center; color: white;">
    <img src="http://i.imgur.com/IKg7ffw.jpg" style="width:100%; height:400px;" />

    <div style="position: absolute;  top: 50%; left: 50%;transform: translate(-50%, -50%); color:whitesmoke; font-size:x-large"><h1>Online store <br> Health & fitness</h1></div>
</div>
@*PROTEINS*@
<a href="/Proteins/Index"><h2>Proteins</h2></a>
@if (Model.ProteinsList.Count > 0)
{
    <div style="width:100%;padding-bottom:20px;padding-top:20px;">
        @{
            int i = 0;
        }
        @foreach (var item in Model.ProteinsList)
        {
            if (i == 3)
            {
                break;
            }
            <div class="item" style="border-radius: 25px;width:31%; height:190px;display:inline-block; margin:20px;margin-left:0px;background: radial-gradient(ellipse farthest-corner at right bottom, #FEDB37 0%, #FDB931 8%, #9f7928 30%, #8A6E2F 40%, transparent 80%),
                radial-gradient(ellipse farthest-corner at left top, #FFFFFF 0%, #FFFFAC 8%, #D1B464 25%, #5d4a1f 62.5%, #5d4a1f 100%);">


                <div class="item-info-text" style="float:left;padding:10px;font-size:large;color:whitesmoke; width:65%; height:100%">
                    <div>
                        <img src="https://www.foodequipment.com.au/media/wysiwyg/low_price.png" style="width:70px;height:70px" />
                    </div>
                    <div style="display:block;">
                       <a href="/Proteins/Details/@item.ProteinId" style="font-size:large;color:whitesmoke; ">@Html.DisplayFor(modelItem => item.Name)</a>
                    </div>
                    <div style="display:block;">
                        Price: $@Html.DisplayFor(modelItem => item.Price)
                    </div>
                    <div style="display:block">
                        <a href="/Proteins/Details/@item.ProteinId" style="font-size:large;color:whitesmoke; ">CHECK IT OUT!</a>
                    </div>
                    




                </div>

                <div class="item-picture" style="display:block;float:left;padding:10px;height:80%;width:30%">
                    <img src="@item.ImageURL" style="width:100px; height:100%" />
                </div>

            </div>
            i++;
        }
    </div>
}
else
{
    <h1>NO PROTEINS IN STORE</h1>
}
